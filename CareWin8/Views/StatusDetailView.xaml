<common:LayoutAwarePage
    x:Name="pageRoot"
    x:Class="CareWin8.StatusDetailView"
    DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CareWin8"
    xmlns:common="using:CareWin8.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Style="{StaticResource LayoutRootStyle}">
        <Grid.Background>
            <ImageBrush ImageSource="../../Images/Background/Detail.PNG" />
        </Grid.Background>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.732*"/>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        
        <!--左侧，包含标题和正文-->
        <Grid DataContext="{Binding Item}"  Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--标题-->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="backButton" Click="GoBack" IsEnabled="{Binding Frame.CanGoBack, ElementName=pageRoot}" Style="{StaticResource BackButtonStyle}"/>
                <TextBlock x:Name="pageTitle" Grid.Column="1" Text="详情" Style="{StaticResource PageHeaderTextStyle}"/>
            </Grid>
            <!--详情-->
            <Border  Margin="120,0,0,0"  Grid.Row="1"   Opacity="1">
                <ScrollViewer Padding="10,10,10,10" VerticalScrollBarVisibility="Auto"  HorizontalScrollBarVisibility="Disabled" HorizontalScrollMode="Disabled" >
                    <StackPanel>
                        <!--首行，包括头像、用户名、转发按钮神马的-->
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Width="70" Height="70"  Source="{Binding LargeIconURL}" Stretch="UniformToFill" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                            <TextBlock Foreground="Black" Margin="10,0,0,0"  Grid.Column="1"  FontSize="30" Text="{Binding Title}" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                            </StackPanel>
                        </Grid>
                        <!--正文内容-->
                        <TextBlock Margin="0,10,10,0"  Foreground="Black" TextWrapping="Wrap" FontSize="24"  Text="{Binding Content}"/>
                        <!--正文图片-->
                        <Image Margin="0,10,10,0"  Stretch="Uniform" MaxWidth="300" MaxHeight="500"  x:Name="ThumbImage" Source="{Binding FullImageURL}" HorizontalAlignment="Center"   Visibility="{Binding IsImageExists}" VerticalAlignment="Top"/>
                        <!--转发内容-->
                        <Border  Margin="10,10,10,10"  Padding="5, 5, 5,15" Visibility="{Binding IsForwardItemExists}" Background="#ffefefef" BorderBrush="#ffafafaf" BorderThickness="1">
                            <StackPanel>
                                <TextBlock TextWrapping="Wrap"  Text="{Binding ForwardItem.ContentWithSpeaker}" FontSize="22" Foreground="Gray" />
                                <Image MaxWidth="300" MaxHeight="500"  Source="{Binding ForwardItem.MidImageURL}" 
                                   Visibility="{Binding ForwardItem.IsImageExists}" />
                            </StackPanel>
                        </Border>
                        <TextBlock Text="{Binding Time}" Foreground="Blue" Margin="0,10,10,0"  x:Name="CreateTimeBlock"  FontSize="18" VerticalAlignment="Bottom" Grid.Column="0" HorizontalAlignment="Right" />
                    </StackPanel>
                </ScrollViewer>
            </Border>
            
        </Grid>       
        
        <!--右侧，评论部分-->
        <Grid Grid.Column="1">
            <!--先把分隔线干掉-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3.2*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"></Grid>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />                   
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Margin="10,50,0,0">                    
                    <TextBlock Text="评论" FontSize="30" Foreground="White"/>
                </Grid>
                <Grid Grid.Row="1" Margin="10,10,10,0">
                    <ListBox SelectionMode="Extended"  ScrollViewer.VerticalScrollMode="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto"  Background="Transparent"  ItemsSource="{Binding CommentItems}" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid>
                                        <Image VerticalAlignment="Top"  Source="{Binding IconURL}" Width="56" Height="56"/>
                                    </Grid>
                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock VerticalAlignment="Bottom"  Margin="5,0,0,0" Foreground="Black" FontSize="22" TextWrapping="Wrap"  Text="{Binding Title}" />
                                        <TextBlock Foreground="Black" FontSize="18" TextWrapping="Wrap" Text="{Binding Content}" />
                                        <TextBlock Foreground="Gray" FontSize="15"  Text="{Binding Time}" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
               
            </Grid>
        </Grid>

        <VisualStateManager.VisualStateGroups>

            <!-- Visual states reflect the application's view state -->
            <VisualStateGroup x:Name="ApplicationViewStates">
                <VisualState x:Name="FullScreenLandscape"/>
                <VisualState x:Name="Filled"/>

                <!-- The entire page respects the narrower 100-pixel margin convention for portrait -->
                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource PortraitBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

                <!-- The back button and title have different styles when snapped -->
                <VisualState x:Name="Snapped">
                    <Storyboard>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="backButton" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedBackButtonStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetName="pageTitle" Storyboard.TargetProperty="Style">
                            <DiscreteObjectKeyFrame KeyTime="0" Value="{StaticResource SnappedPageHeaderTextStyle}"/>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </Grid>
</common:LayoutAwarePage>
